	}
	.align-left {
		display: inline-flex;
	}
</style>
<link rel="stylesheet" href="/simplyCountdown.theme.default.css"/>
<script src="/simplyCountdown.min.js" is:inline></script>
<script>
var today = new Date();
var dd = String(today.getDate()).padStart(2, '0');
var mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
var yyyy = today.getFullYear();

today = dd + '-' + mm + '-' + yyyy;
// document.write(today);

const para = document.createElement("span");
let bold = document.createElement('strong')
const node = document.createTextNode(today);
bold.appendChild(node);
para.appendChild(bold);

const element = document.getElementsByClassName("banner")[0];
element.appendChild(para);
</script>
